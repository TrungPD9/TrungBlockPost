
@{
    ViewData["Title"] = "Details";
}

@model BasedProject.Models.Models.Post

<h2>Chi tiết bài viết</h2>
<p><strong>Tiêu đề:</strong> @Model.Title</p>
<p><strong>Danh mục:</strong> @Model.Category?.Name</p>
<p><strong>Ngày đăng:</strong> @Model.PostedOn.ToString("yyyy-MM-dd")</p>
<p><strong>Nội dung:</strong> @Model.PostContent</p>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>


